    "lint": "echo 'No linting configured yet'",
    "build": "echo 'No build process configured - using plain JS/CSS'"
  },
  "keywords": [
    "openbis",
    "widget",
    "quantity",
    "unit",
    "conversion",
    "measurement",
    "scientific",
    "laboratory"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "convert": "^5.12.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^27.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
